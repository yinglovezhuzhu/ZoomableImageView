<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.opensource.zoomableimageview"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.opensource.zoomableimageview.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.opensource.zoomableimageview.SimpleSampleActivity" />
        <activity android:name="com.opensource.zoomableimageview.ViewPagerActivity" />
        <activity android:name="com.opensource.zoomableimageview.RotationSampleActivity" />
        <activity android:name="com.opensource.zoomableimageview.NetSampleActivity" />
    </application>

</manifest>